<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="197dp"
            android:layout_height="95dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/input"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" android:layout_marginStart="60dp"/>


    <RadioGroup
            android:layout_width="190dp"
            android:layout_height="263dp"
            app:layout_constraintBottom_toTopOf="@+id/btnConvertir"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/input"
            android:id="@+id/radioGroup2" app:layout_constraintStart_toStartOf="@+id/input">
        <RadioButton
                android:text="@string/btnCelsius"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/celsius" android:layout_weight="1"/>
        <RadioButton
                android:text="@string/btnFahrenheit"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/fahrenheit" android:layout_weight="1"/>
    </RadioGroup>
    <Button
            android:text="@string/btnConvertir"
            android:layout_width="134dp"
            android:layout_height="69dp"
            android:id="@+id/btnConvertir" android:layout_marginBottom="91dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="76dp"/>
</android.support.constraint.ConstraintLayout>